<!DOCTYPE html>
<html>
<head>
	<% include ../partials/head %>
	<link rel="stylesheet" type="text/css" href="../css/game.css">
</head>
<body>
	<div class="container">
		<header>
			<% include ../partials/header %>
		</header>
		<main>
			<div class="row">
				<div class="col-md-4 col-md-push-8">
					<div id="player-display" class="alert alert-info" role="alert" style="display: none;"></div>
					<div class="panel panel-default">
						<div class="panel-body">
							<form>
								<div class="form-group">
									<label for="opponent">Oponente</label>
									<select id="opponent" class="form-control">
										<option value="computer">Jogar contra a IA</option>
										<option value="friend">Jogar contra um amigo</option>
									</select>
								</div>
								<div class="form-group">
									<label for="first">Quem vai primeiro</label>
									<select id="first" class="form-control">
										<option value="player">Jogador</option>
										<option value="computer">Computador</option>
									</select>
								</div>
								<div class="form-group">
									<label for="difficulty">Dificuldade</label>
									<select id="difficulty" class="form-control">
										<option value="1">Muito fácil</option>
										<option value="2" selected>Médio</option>
										<option value="3">Difícil</option>
										<option value="4">Muito Difícil</option>
										<option value="5">Extremamente Difícil</option>
										<option value="6">Expert</option>
										<option value="7">Ancião</option>
										<option value="8">Chuck Norris</option>
									</select>
								</div>
								<button type="button" id="new-game" class="btn btn-primary">Novo Jogo</button>
							</form>
						</div>
					</div>
					<div class="panel panel-default hidden-xs hidden-sm">
						<div class="panel-heading">
							<h2 class="panel-title">Histórico</h2>
						</div>
						<table id="history-table" class="table">
							<thead>
								<tr>
									<th scope="col">Turno</th>
									<th scope="col">Jogador</th>
									<th scope="col">Localização</th>
								</tr>
							</thead>
							<tbody></tbody>
						</table>
					</div>
				</div>
				<div class="col-md-8 col-md-pull-4">
					<div class="panel panel-default">
						<div class="panel-heading">
							<h1 id="game-caption" class="panel-title">Jogo não foi niciado</h1>
						</div>
						<div class="panel-body">
							<div id="game" class="disabled"></div>
						</div>
					</div>
				</div>
			</div>
		</main>
		<footer>
			<% include ../partials/footer %>
		</footer>
	</div>
	<% include ../partials/scripts %>
	<script type="text/javascript" src="../js/game-script.js"></script>
</body>
</html>
